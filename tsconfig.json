{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "noEmit": true,
    "verbatimModuleSyntax": true, // 任意：import/export をそのまま残す
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@sledge/core": ["../core"],
      "@sledge/core/*": ["../core/src/*"],
      "@sledge/theme": ["../theme"],
      "@sledge/theme/*": ["../theme/src/*"]
    }
  }
}
